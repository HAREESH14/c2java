int max(int a, int b)
{
  return (a > b ? a : b);
}



float average(int a, int b)
{
  return (a + b) / 2.0;
}



void printRange(int start, int end)
{
  for (int i = start; i < end; i++)
  {
    printf("%d\n", i);
  }

}



int isEven(int n)
{
  return (n % 2) == 0;
}



